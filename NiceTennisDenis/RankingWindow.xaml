<Window x:Class="NiceTennisDenis.RankingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NiceTennisDenis"
        mc:Ignorable="d"
        Title="RankingWindow" SizeToContent="WidthAndHeight">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Height="30">
            <Button Name="BtnGenerate" Width="75" Height="25" VerticalAlignment="Center" Content="Go" Click="BtnGenerate_Click" />
        </StackPanel>
        <ListBox Name="LsbRanking" DockPanel.Dock="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:Ranker />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
